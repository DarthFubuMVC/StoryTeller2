{
  "name": "storyteller",
  "version": "0.0.1",
  "description": "Executable Specification authoring and running",
  "scripts": {
    "build-client": "better-npm-run build-client",
    "build-client:prod": "better-npm-run build-client:prod",
    "watch": "webpack -w",
    "harness": "node ./server",
    "smoke-test": "karma start smoke-test.conf.js --single-run",
    "tdd-smoke": "karma start smoke-test.conf.js --auto-watch",
    "tdd-karma": "karma start --auto-watch",
    "tdd-mocha": "mocha -w -G",
    "test": "yarn run test-mocha && yarn run test-karma && yarn run smoke-test",
    "test:prod": "better-npm-run test:prod",
    "test-karma": "karma start --single-run",
    "test-mocha": "mocha --compilers js:babel-core/register"
  },
  "betterScripts": {
    "build-client": {
      "command": "webpack",
      "env": {
        "NODE_ENV": "development"
      }
    },
    "build-client:prod": {
      "command": "webpack",
      "env": {
        "NODE_ENV": "production"
      }
    },
    "test:prod": {
      "command": "npm run test-mocha && npm run test-karma && npm run smoke-test",
      "env": {
        "NODE_ENV": "production"
      }
    }
  },
  "devDependencies": {
    "babel": "^6.23.0",
    "babel-core": "^6.26.0",
    "babel-eslint": "^8.0.1",
    "babel-loader": "^7.1.2",
    "babel-polyfill": "^6.26.0",
    "babel-preset-es2015": "^6.24.1",
    "babel-preset-react": "^6.24.1",
    "babel-preset-stage-2": "^6.24.1",
    "babel-register": "^6.26.0",
    "better-npm-run": "^0.1.0",
    "body-parser": "^1.18.2",
    "chai": "^4.1.2",
    "eslint": "^4.8.0",
    "express": "^4.16.2",
    "fixed-data-table-2": "^0.8.1",
    "fs-extra": "^4.0.2",
    "growl": "^1.10.3",
    "jsx-loader": "^0.13.2",
    "karma": "^1.7.1",
    "karma-chrome-launcher": "^2.2.0",
    "karma-cli": "^1.0.1",
    "karma-growl-reporter": "^1.0.0",
    "karma-mocha": "^1.3.0",
    "karma-mocha-reporter": "^2.2.4",
    "karma-osx-reporter": "^0.2.1",
    "karma-phantomjs-launcher": "^1.0.4",
    "karma-webpack": "^2.0.5",
    "mocha": "^4.0.1",
    "phantomjs": "^2.1.7",
    "react-addons-test-utils": "^15.6.2",
    "react-hot-loader": "^3.0.0",
    "react-router-dom": "^4.2.2",
    "webpack": "^3.6.0",
    "webpack-dev-server": "^2.9.1",
    "yargs": "^9.0.1"
  },
  "dependencies": {
    "classnames": "^2.2.5",
    "fuse.js": "^3.2.0",
    "history": "^4.7.2",
    "immutable": "^3.8.2",
    "jquery": "^3.2.1",
    "lodash": "^4.17.4",
    "marked": "^0.3.6",
    "mousetrap": "^1.6.1",
    "node-uuid": "^1.4.8",
    "postal": "^2.0.5",
    "react": "^16.0.0",
    "react-bootstrap": "^0.31.3",
    "react-dom": "^16.0.0",
    "react-overlays": "^0.8.2",
    "react-redux": "^5.0.6",
    "react-router": "^4.2.0",
    "redux": "^3.7.2",
    "rxjs": "^5.4.3",
    "scroll-into-view": "^1.9.1",
    "typeahead": "^0.2.2"
  }
}

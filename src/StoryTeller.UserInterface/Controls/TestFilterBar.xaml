<UserControl x:Class="StoryTeller.UserInterface.Controls.TestFilterBar"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml" xmlns:Workspace="clr-namespace:StoryTeller.UserInterface.Workspace"
             Foreground="White">
  <Grid>
    <Grid.RowDefinitions>
      <RowDefinition/>
      <RowDefinition/>
    </Grid.RowDefinitions>
    <TextBox Grid.Row="0" Height="23" Name="tagsFilter" HorizontalAlignment="Stretch" Padding="2" Margin="5"/>
    <StackPanel Margin="5 2 2 5" Grid.Row="1" Orientation="Horizontal" HorizontalAlignment="Stretch" Background="{DynamicResource SelectedBackgroundBrush2}">
        <StackPanel Name="resultPanel" Orientation="Horizontal" Margin="0 0 2 0">
            <TextBlock Width="136">Some text here</TextBlock>
        </StackPanel>
        <StackPanel Name="lifecyclePanel" Orientation="Horizontal">
            <TextBlock>Some text here</TextBlock>
        </StackPanel>
    </StackPanel>
  </Grid>
</UserControl>

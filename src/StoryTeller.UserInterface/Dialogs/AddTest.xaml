<UserControl x:Class="StoryTeller.UserInterface.Dialogs.AddTest"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml" Padding="5">
    <StackPanel Orientation="Vertical" HorizontalAlignment="Left">
        <StackPanel  Orientation="Horizontal" Margin="3">
            <Label Margin="0 0 10 0">Test Name</Label>
            <TextBox Name="name" Width="300"></TextBox>
        </StackPanel>
        <Button Margin="3" Padding="5 3 10 0"  HorizontalAlignment="Left" Name="create" IsDefault="True" Height="25" VerticalContentAlignment="Stretch">
            <StackPanel Orientation="Horizontal">
                <TextBlock Name="icon" FontFamily="/Fonts/#FontAwesome" Margin="0 4 5 0">&#xf067;</TextBlock>
                <Label Height="25" VerticalAlignment="Stretch">Create</Label>
            </StackPanel>
            
            
        </Button>
    </StackPanel>
</UserControl>
